@page "/TaskT"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>


<button @onclick="HandleClick">Start</button>
<input id="textBox" @bind="InputValue" placeholder="enter text..." type="search"/>

<div class="row col-md-6" >
    <p>@text</p>
    
    
</div>

<div class="row" >
    <div class="col-md-6">
        <img src="spinning-loading.gif" alt="Image" hidden="@imageHidden">
    </div>  
</div>


@code{
    private bool imageHidden = true;
    private string text = "";
    private string apiURL = "https://localhost:7282/";
    public HttpClient httpClient = new ();
    private string? InputValue { get; set; }

    private async Task HandleClick()
    {
        imageHidden = false;

        text = "";
                
        //var greeting = await GetGreetings(InputValue ?? throw new ArgumentNullException(nameof(InputValue)));
        var greeting = await GetGreetings(InputValue ?? string.Empty );
        text =  greeting;
        imageHidden = true;
    }

    private async Task<string> GetGreetings(string name)
        {
            using var response = await httpClient.GetAsync($"{apiURL}greetings/{name}");
            return await response.Content.ReadAsStringAsync();
        }

}